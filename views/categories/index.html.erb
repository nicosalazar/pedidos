<p id="notice"><%= notice %></p>

<h1>Categorias</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.desc %></td>

        <td>
          <%= button_to edit_category_path(category), {method: :get, class: "btn btn-info"} do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to category, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= button_to new_category_path, {method: :get, class: "btn btn-success"} do %>
    <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nueva categoría
<% end %>
